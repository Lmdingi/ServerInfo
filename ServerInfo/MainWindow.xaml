<platformUiControls:VideoOSWindow x:Class="ServerInfo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerInfo"
        xmlns:platformUiControls="clr-namespace:VideoOS.Platform.UI.Controls;assembly=VideoOS.Platform"
        xmlns:VideoOSPlatformUI="clr-namespace:VideoOS.Platform.UI;assembly=VideoOS.Platform" 
        mc:Ignorable="d"
        Title="ServerInfo Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        
        <StackPanel>
            <platformUiControls:VideoOSTextBlockLabel Grid.Row="0" Text="List of all defined items:" Margin="10,0,0,0" />
            <VideoOSPlatformUI:ItemPickerWpfUserControl 
                x:Name="_itemPicker" 
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Grid.Row="1"
                IsMultiSelection="False"
                SelectedItemChanged="ItemPickerOnSelectedItemChanged" />


            <platformUiControls:VideoOSButtonPrimaryMedium Content="Load" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Click="Load_Click" />
        </StackPanel>
        
        
        <platformUiControls:VideoOSButtonPrimaryMedium Content="Close" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Click="Button_Click" Grid.Row="1" />
    </Grid>
</platformUiControls:VideoOSWindow>
